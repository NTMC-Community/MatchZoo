{
  "net_name": "ARCII",
  "global":{
      "model_type": "PY",
      "weights_file": "./models/arcii.wikiqa.weights",
      "num_epochs": 10,
      "num_batch": 10,
      "optimizer": "adam",
      "learning_rate": 0.0001
  },
  "inputs": {
    "share": {
        "text1_corpus": "../data/example/ranking/corpus_preprocessed.txt",
        "text2_corpus": "../data/example/ranking/corpus_preprocessed.txt",
        "use_dpool": false,
        "fill_word": 193367,
        "embed_size": 50,
        "vocab_size": 193368,
        "train_embed": false,
        "text1_maxlen": 20,
        "text2_maxlen": 500
    },
    "train": {
        "input_type": "PairGenerator", 
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 50,
        "batch_per_iter": 5,
        "batch_size": 100,
        "relation_file": "../data/example/ranking/relation_train.txt"
    },
    "valid": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "../data/example/ranking/relation_train.txt"
    },
    "test": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "../data/example/ranking/relation_test.txt"
    },
    "predict": {
        "input_type": "ListGenerator", 
        "phase": "PREDICT",
        "batch_list": 10,
        "relation_file": "../data/example/ranking/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TREC",
      "save_path": "predict.wikiqa.arii.txt"
    }
  },
  "model": {
    "model_path": "./models/",
    "model_py": "arcii.ARCII",
    "1d_kernel_count": 32,
    "1d_kernel_size": 3,
    "num_conv2d_layers": 1,
    "2d_kernel_counts": [16],
    "2d_kernel_sizes": [3],
    "2d_mpool_sizes": [[3, 3]]
  },
  "losses": [ "rank_hinge_loss" ],
  "metrics": [ "ndcg@3", "ndcg@5", "map" ]
}

