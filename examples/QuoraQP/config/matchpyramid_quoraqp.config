{
  "net_name": "MatchPyramid",
  "global":{
      "model_type": "PY",
      "weights_file": "examples/QuoraQP/weights/matchpyramid_quoraqp.weights",
      "save_weights_iters": 10,
      "num_iters": 500,
      "display_interval": 10,
      "test_weights_iters": 500,
      "optimizer": "adam",
      "learning_rate": 0.001
  },
  "inputs": {
    "share": {
        "text1_corpus": "./data/QuoraQP/corpus_preprocessed.txt",
        "text2_corpus": "./data/QuoraQP/corpus_preprocessed.txt",
        "use_dpool": true,
        "embed_size": 300,
        "train_embed": true,
        "embed_path": "./data/QuoraQP/embed_glove_d300_norm",
        "vocab_size": 28159,
        "target_mode": "classification",
        "class_num": 2,
        "text1_maxlen": 20,
        "text2_maxlen": 20
    },
    "train": {
        "input_type": "PointGenerator", 
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 20,
        "batch_per_iter": 5,
        "batch_size": 200,
        "relation_file": "./data/QuoraQP/relation_train.txt"
    },
    "valid": {
        "input_type": "PointGenerator", 
        "phase": "EVAL",
        "batch_size": 200,
        "relation_file": "./data/QuoraQP/relation_valid.txt"
    },
    "test": {
        "input_type": "PointGenerator", 
        "phase": "EVAL",
        "batch_size": 200,
        "relation_file": "./data/QuoraQP/relation_test.txt"
    },
    "predict": {
        "input_type": "PointGenerator", 
        "phase": "PREDICT",
        "batch_size": 200,
        "relation_file": "./data/QuoraQP/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TEXTNET",
      "save_path": "predict.test.matchpyramid_quoraqp.txt"
    }
  },
  "model": {
    "model_path": "matchzoo/models/",
    "model_py": "matchpyramid.MatchPyramid",
    "setting": {
        "kernel_count": 64, 
        "kernel_size": [5, 5], 
        "dpool_size": [5, 5],
        "dropout_rate": 0
    }
  },
  "losses": [
    {
       "object_name": "categorical_crossentropy",
       "object_params": {}
    }
  ],
  "metrics": [ "accuracy" ]
}

